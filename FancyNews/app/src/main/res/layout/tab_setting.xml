<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginVertical="20dp"
    android:layout_gravity="center">
    <TextView
        android:id="@+id/tab_setting_text_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_show"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="sans-serif-black"/>
    <GridLayout
        android:id="@+id/gridShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        app:layout_constraintTop_toBottomOf="@+id/tab_setting_text_show"
        android:animateLayoutChanges="true"
        android:layout_gravity="center">
    </GridLayout>

    <TextView
        android:id="@+id/tab_setting_text_hide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_hide"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@+id/gridShow" />
    <GridLayout
        android:id="@+id/gridHide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        app:layout_constraintTop_toBottomOf="@+id/tab_setting_text_hide"
        android:animateLayoutChanges="true"
        android:layout_gravity="center">
    </GridLayout>
</LinearLayout>